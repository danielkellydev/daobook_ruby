<div class="fixed z-10 inset-0 overflow-y-auto">
  <div class="flex items-center justify-center min-h-screen">
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-xl font-bold mb-4">Appointment Details</h2>

      <div class="mb-4">
        <p><strong>Client:</strong> <%= @appointment.client.full_name %></p>
        <p><strong>Practitioner:</strong> <%= @appointment.practitioner.full_name %></p>
        <p><strong>Appointment Type:</strong> <%= @appointment.appointment_type ? @appointment.appointment_type.name : 'N/A' %></p>
        <p>
          <strong>Start Time:</strong>
          <%= @appointment.start_time.present? ? @appointment.start_time.strftime("%B %d, %Y %I:%M %p") : 'N/A' %>
        </p>

        <% if @appointment.appointment_type.present? %>
          <% duration_in_minutes = @appointment.appointment_type.duration %>
          <% end_time = @appointment.start_time.present? ? @appointment.start_time + duration_in_minutes.minutes : nil %>

          <p>
            <strong>End Time:</strong>
            <%= end_time.present? ? end_time.strftime("%B %d, %Y %I:%M %p") : 'N/A' %>
          </p>
        <% else %>
          <p><strong>End Time:</strong> N/A</p>
        <% end %>
      </div>

      <div class="flex justify-end">
        <%= link_to 'Edit', edit_appointment_path(@appointment), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2' %>
        <%= button_to 'Delete', appointment_path(@appointment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    </div>
  </div>
</div>