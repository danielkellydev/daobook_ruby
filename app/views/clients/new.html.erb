<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">New Client</h1>

  <%= form_with(model: @client, local: true, class: 'space-y-4') do |form| %>
    <% if @client.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold mb-2"><%= pluralize(@client.errors.count, 'error') %> prohibited this client from being saved:</h2>
        <ul class="list-disc pl-5">
          <% @client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :first_name, class: 'block font-bold' %>
      <%= form.text_field :first_name, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>
    </div>

    <div>
      <%= form.label :last_name, class: 'block font-bold' %>
      <%= form.text_field :last_name, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>
    </div>

    <div>
      <%= form.label :date_of_birth, class: 'block font-bold' %>
      <%= form.date_field :date_of_birth, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>
    </div>

    <div>
      <%= form.label :email, class: 'block font-bold' %>
      <%= form.email_field :email, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>
    </div>

    <div>
      <%= form.label :phone_number, class: 'block font-bold' %>
      <%= form.text_field :phone_number, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>
    </div>

    <div>
      <%= form.label :health_fund_id, 'Health Fund', class: 'block font-bold' %>
      <%= form.collection_select :health_fund_id, @health_funds, :id, :name, { prompt: 'Select Health Fund' }, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>
    </div>

    <div>
      <%= form.submit 'Create Client', class: 'px-4 py-2 font-bold text-white bg-blue-500 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50' %>
    </div>
  <% end %>
</div>