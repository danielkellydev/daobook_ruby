<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">Consultations for <%= @client.first_name %> <%= @client.last_name %></h1>
  <%= link_to 'New Consultation', new_client_consultation_path(@client), class: 'px-4 py-2 font-bold text-white bg-blue-500 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50' %>

  <table class="mt-4 w-full">
    <thead>
      <tr>
        <th class="px-4 py-2">Date</th>
        <th class="px-4 py-2">Practitioner</th>
        <th class="px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @consultations.each do |consultation| %>
        <tr>
          <td class="px-4 py-2"><%= consultation.created_at.strftime('%Y-%m-%d') %></td>
          <td class="px-4 py-2"><%= consultation.practitioner.first_name %> <%= consultation.practitioner.last_name %></td>
          <td class="px-4 py-2">
            <%= link_to 'View', consultation_path(consultation), class: 'text-blue-500 hover:underline' %>
            <%= link_to 'Edit', edit_consultation_path(consultation), class: 'ml-2 text-blue-500 hover:underline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>