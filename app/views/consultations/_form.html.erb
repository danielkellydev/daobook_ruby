<%= form_with(model: [@client, @consultation], local: true, class: 'space-y-4') do |form| %>
  <div>
    <%= form.label :notes, class: 'block font-bold' %>
    <%= form.text_area :notes, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50', rows: 10 %>
  </div>

  <%= form.submit class: 'px-4 py-2 font-bold text-white bg-blue-500 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50' %>
<% end %>